#, python-format
msgid ""
"\n"
"<br><img src=\"%(STATIC_URL)s/images/help/pick-random-ex2.png\" /> picks a "
"random number from 1 to 10.<br/>\n"
"\n"
"<br><img src=\"%(STATIC_URL)s/images/help/pick-random-ex3.png\" /><br/>\n"
"<br>Click to have a sprite say a random number. Click again to get another "
"random number.<br/>\n"
"\n"
msgstr ""
"\n"
"<br><img src=\"%(STATIC_URL)s/images/help/pick-random-ex2.png\" /> 將會從 1 到 "
